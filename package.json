{
	"name": "@joshwilsonvu/webpack-plugin-esm-bridge",
	"type": "module",
	"version": "0.1.1",
	"packageManager": "pnpm@9.12.3",
	"description": "Readable, granular, and performant JS loading for HTML.",
	"license": "MIT",
	"homepage": "https://github.com/joshwilsonvu/webpack-plugin-esm-bridge#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/joshwilsonvu/webpack-plugin-esm-bridge.git"
	},
	"bugs": {
		"url": "https://github.com/joshwilsonvu/webpack-plugin-esm-bridge/issues"
	},
	"keywords": ["webpack", "rspack", "glob", "entry", "import", "esm", "html"],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./rspack": {
			"import": "./dist/rspack.js",
			"require": "./dist/rspack.cjs"
		},
		"./*": "./*"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": ["dist"],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch src",
		"lint": "biome lint --diagnostic-level=warn .",
		"format": "biome format --write .",
		"prepublishOnly": "npm run build",
		"release": "bumpp && npm publish",
		"test": "vitest"
	},
	"peerDependencies": {
		"@rspack/core": "^1.0.14",
		"html-webpack-plugin": "^5",
		"webpack": "^4 || ^5"
	},
	"peerDependenciesMeta": {
		"@rspack/core": {
			"optional": true
		},
		"html-webpack-plugin": {
			"optional": true
		},
		"webpack": {
			"optional": true
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@rspack/core": "^1.0.14",
		"@types/node": "^22.8.1",
		"@vitest/coverage-v8": "^2.1.3",
		"bumpp": "^9.7.1",
		"chalk": "^5.3.0",
		"es-module-lexer": "^1.5.4",
		"html-webpack-plugin": "^5",
		"tsup": "^8.3.5",
		"typescript": "^5.6.3",
		"vitest": "^2.1.3",
		"webpack": "^5.95.0",
		"webpack-merge": "^6.0.1"
	},
	"dependencies": {
		"globby": "^14.1.0"
	}
}
